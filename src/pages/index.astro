---
import Layout from "../layouts/Layout.astro";
import PricingSection from "../components/PricingSection.astro";
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Monoton&display=swap&family=Share+Tech+Mono&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=VT323&display=swap");

  .neon-section {
    background: linear-gradient(
      to bottom,
      var(--color-bg-secondary) 0%,
      var(--color-bg-secondary) 85%,
      var(--color-bg-primary) 100%
    );
    position: relative;
    overflow: hidden;
    margin-bottom: -3rem;
    padding-bottom: 5rem;
    z-index: 1;
  }

  .neon-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      circle at center,
      rgba(138, 46, 255, 0.15) 0%,
      rgba(138, 46, 255, 0.05) 40%,
      transparent 70%
    );
    pointer-events: none;
  }

  .neon-title {
    font-family: "Monoton", cursive;
    font-size: 3rem;
    color: var(--color-primary-200);
    text-shadow:
      0 0 7px var(--color-primary-300),
      0 0 10px var(--color-primary-300),
      0 0 21px var(--color-primary-300),
      0 0 42px var(--color-primary-500),
      0 0 82px var(--color-primary-500);
    animation: neon-pulse 1.5s ease-in-out infinite alternate;
  }

  .neon-text {
    color: var(--color-text-secondary);
    font-size: 1.2rem;
    margin-top: 2rem;
    text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
  }

  @keyframes neon-pulse {
    from {
      text-shadow:
        0 0 7px var(--color-primary-300),
        0 0 10px var(--color-primary-300),
        0 0 21px var(--color-primary-300),
        0 0 42px var(--color-primary-500);
    }
    to {
      text-shadow:
        0 0 7px var(--color-primary-300),
        0 0 10px var(--color-primary-300),
        0 0 21px var(--color-primary-300),
        0 0 42px var(--color-primary-500),
        0 0 82px var(--color-primary-500),
        0 0 92px var(--color-primary-500);
    }
  }

  .rain-techs {
    background: linear-gradient(
      170deg,
      rgba(19, 2, 255, 0.1) 0%,
      rgba(0, 212, 255, 0.05) 20%,
      rgba(0, 212, 255, 0.05) 80%,
      rgba(55, 0, 255, 0.1) 100%
    );
    position: relative;
    height: 400px;
    overflow: hidden;
    z-index: 0;
    backdrop-filter: blur(100px);
    box-shadow:
      0 -50px 100px -20px rgba(55, 0, 255, 0.3),
      0 50px 100px -20px rgba(19, 2, 255, 0.3),
      inset 0 -50px 50px -20px rgba(55, 0, 255, 0.2),
      inset 0 50px 50px -20px rgba(19, 2, 255, 0.2);
    animation: vintageColors 8s linear infinite;
  }

  @keyframes vintageColors {
    0%, 100% {
      filter: hue-rotate(0deg) saturate(1);
    }
    33% {
      filter: hue-rotate(-5deg) saturate(1.1);
    }
    66% {
      filter: hue-rotate(5deg) saturate(0.9);
    }
  }

  .rain-techs::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: black;
    z-index: -1;
  }

  .tech-rain-container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: start;
    padding: 1rem 4rem;
    gap: 1rem;
    background:
      linear-gradient(90deg,
        transparent 0%,
        rgba(55, 0, 255, 0.05) 45%,
        rgba(19, 2, 255, 0.05) 55%,
        transparent 100%),
      repeating-linear-gradient(
        45deg,
        rgba(55, 0, 255, 0.02) 0px,
        rgba(55, 0, 255, 0.02) 1px,
        transparent 1px,
        transparent 10px);
  }

  .rain-text {
    animation-name: rain, flicker;
    animation-timing-function: cubic-bezier(0.4, 0, 0.6, 1), linear;
    animation-iteration-count: infinite;
    animation-fill-mode: both;
    animation-delay: var(--delay);
    animation-duration: var(--duration), 0.15s;
  }

  .rain-text.glitch {
    animation-name: rain, glitch, flicker;
    animation-duration: var(--duration), 0.3s, 0.15s;
    animation-timing-function: linear;
  }

  .rain-text.glitch[style*="translateY(300px)"] {
    animation:
      rain var(--duration) linear infinite var(--delay),
      glitch 0.3s linear infinite,
      flicker 0.15s linear infinite;
  }

  @keyframes glitchText {
    0% {
      clip-path: inset(50% 0 30% 0);
      transform: translate(-5px, 5px);
    }
    10% {
      clip-path: inset(20% 0 60% 0);
      transform: translate(5px, -5px);
    }
    20% {
      clip-path: inset(40% 0 40% 0);
      transform: translate(-5px, 5px);
    }
    30% {
      clip-path: inset(80% 0 0% 0);
      transform: translate(5px, -5px);
    }
    40% {
      clip-path: inset(0 0 80% 0);
      transform: translate(-5px, 5px);
    }
    50% {
      clip-path: inset(60% 0 20% 0);
      transform: translate(5px, -5px);
    }
    60% {
      clip-path: inset(30% 0 50% 0);
      transform: translate(-5px, 5px);
    }
    70% {
      clip-path: inset(70% 0 10% 0);
      transform: translate(5px, -5px);
    }
    80% {
      clip-path: inset(10% 0 70% 0);
      transform: translate(-5px, 5px);
    }
    90% {
      clip-path: inset(50% 0 30% 0);
      transform: translate(5px, -5px);
    }
    100% {
      clip-path: inset(30% 0 50% 0);
      transform: translate(0);
    }
  }

  .glitch-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      transparent 0%,
      rgba(0, 0, 0, 0.2) 50%,
      transparent 100%
    );
    background-size: 100% 3px;
    animation: glitch 0.2s linear infinite;
    pointer-events: none;
    opacity: 0.3;
    mix-blend-mode: overlay;
  }

  @keyframes rain {
    0% {
      transform: translateY(0px) scale(1);
      opacity: 0;
      filter: blur(0);
    }
    15% {
      transform: translateY(200px) scale(1);
      opacity: 0.8;
      filter: blur(0);
    }
    85% {
      transform: translateY(800px) scale(1);
      opacity: 0.8;
      filter: blur(0);
    }

    90% {
      transform: translateY(800px) scale(0.8);
      opacity: 0;
      filter: blur(5px);
    }

    100% {
      transform: translateY(900px) scale(0.8);
      opacity: 0;
      filter: blur(20px);
    }
  }

  @keyframes glitch {
    0% {
      text-shadow:
        0 0 5px var(--color-primary-300),
        0 0 10px var(--color-primary-300),
        0 0 20px var(--color-primary-500);
      transform: skew(0deg) scale(1);
      filter: none;
    }
    30% {
      text-shadow:
        0 0 5px var(--color-primary-300),
        -3px 0 15px rgba(255, 50, 50, 0.75),
        3px 0 15px rgba(50, 255, 50, 0.75);
      transform: skew(2deg) scale(1.02);
      filter: saturate(1.5) brightness(1.2);
    }
    60% {
      text-shadow:
        0 0 5px var(--color-primary-300),
        3px 0 15px rgba(255, 50, 50, 0.75),
        -3px 0 15px rgba(50, 255, 50, 0.75);
      transform: skew(-2deg) scale(0.98);
      filter: saturate(0.8) brightness(1.4);
    }
    100% {
      text-shadow:
        0 0 5px var(--color-primary-300),
        0 0 10px var(--color-primary-300),
        0 0 20px var(--color-primary-500);
      transform: skew(0deg) scale(1);
      filter: none;
    }
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.95;
    }
    100% {
      opacity: 1;
    }
  }
</style>

