---
import PricingCard from './PricingCard.astro';

const plans = [
  {
    title: 'Plan Básico',
    price: '$149.900',
    badge: 'Ideal para Emprendedores',
    features: [
      'Landing page profesional',
      'Formulario de contacto',
      'Diseño responsive',
      'Optimización para móviles',
      '1 mes de soporte'
    ],
    buttonText: 'Comenzar Ahora',
    buttonVariant: 'outline-primary'
  },
  {
    title: 'Plan Estándar',
    price: '$299.900',
    badge: 'Para Pequeñas Empresas',
    isPopular: true,
    features: [
      'Hasta 5 secciones personalizadas',
      'Formularios avanzados',
      'Integración con redes sociales',
      'Optimización SEO básica',
      '3 meses de soporte',
      'Google Analytics'
    ],
    buttonText: 'Elegir Plan',
    buttonVariant: 'primary'
  },
  {
    title: 'Plan Premium',
    price: '$599.900',
    badge: 'Solución Completa',
    features: [
      'Sitio web completo',
      'Blog integrado',
      'SEO avanzado',
      'Dominio .cl por 1 año',
      '6 meses de soporte',
      'Certificado SSL',
      'Panel de administración'
    ],
    buttonText: 'Contactar',
    buttonVariant: 'outline-primary'
  }
];
---

<section class="container py-5" data-aos="fade-up">
  <div class="row justify-content-center">
    <div class="col-lg-8 text-center">
      <h2 class="display-5 fw-bold mb-3">Nuestros Planes</h2>
      <p class="lead text-muted mb-5">Elige el plan que mejor se adapte a tus necesidades</p>
    </div>
  </div>
  <div class="row g-4 px-lg-4">
    {plans.map(plan => (
      <PricingCard {...plan} />
    ))}
  </div>
</section>
